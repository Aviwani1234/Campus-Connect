<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HostelTrackingActivity">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/location_lottie"
        />
    <TextView
        android:id="@+id/gettingLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@id/animationView"
        android:text="Trying to get Location"
        android:textStyle="bold"
        android:textColor="@color/iconColor"
        android:textSize="22sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/gettingLocation"
        android:layout_marginTop="15dp"
        android:text="Its necessary in order to do the rest functionality for you."
        android:textSize="18sp"
        android:textColor="@color/iconColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/gettingLocation"
        android:layout_marginTop="15dp"

        android:textSize="18sp"
        android:textColor="@color/iconColor"/>



</LinearLayout>